<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:buttonStyle">@style/ButtonApp</item>
        <item name="android:colorButtonNormal">@color/primary_dark</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">@color/primary</item>
        <item name="android:background">@color/primary_light</item>
    </style>

    <style name="TextOnSplashScreen" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">@color/primary</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="ButtonApp" parent="android:Widget.Material.Button">
        <item name="android:textColor">@drawable/buttons_text_color</item>
    </style>

</resources>